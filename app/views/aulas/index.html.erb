<p id="notice"><%= notice %></p>

<h1>Aulas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Bloque</th>
      <th>Capacidad</th>
      <th>Equipamiento</th>
      <th>Ocupado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aulas.each do |aula| %>
      <tr>
        <td><%= aula.nombre %></td>
        <td><%= aula.bloque %></td>
        <td><%= aula.capacidad %></td>
        <td><%= aula.equipamiento %></td>
        <td><%= aula.ocupado %></td>
        <td><%= link_to 'Show', aula %></td>
        <td><%= link_to 'Edit', edit_aula_path(aula) %></td>
        <td><%= link_to 'Destroy', aula, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

